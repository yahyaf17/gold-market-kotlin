<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gm_white"
    tools:context=".maintab.HomeFragment">

    <View
        android:id="@+id/container_pocket_info"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/radius_all"
        android:backgroundTint="#FFE082"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTotalBalance" />

    <TextView
        android:id="@+id/title_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/gm_primary"
        android:fontFamily="@font/asap_bold"
        android:padding="15dp"
        android:text="@string/home"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/container_current"
        android:layout_width="0dp"
        android:layout_height="158dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/radius_all"
        android:backgroundTint="#FFE0B2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnBuy"
        android:layout_width="165dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/radius_all"
        android:backgroundTint="@color/gm_dark_grey"
        android:backgroundTintMode="add"
        android:fontFamily="@font/asap_bold"
        android:hapticFeedbackEnabled="true"
        android:text="@string/buy"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/container_current"
        app:layout_constraintEnd_toStartOf="@+id/btnSell"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@id/container_current" />

    <Button
        android:id="@+id/btnSell"
        android:layout_width="165dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/radius_all"
        android:backgroundTint="@color/gm_dark_grey"
        android:fontFamily="@font/asap_bold"
        android:hapticFeedbackEnabled="true"
        android:text="@string/sell"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/container_current"
        app:layout_constraintEnd_toEndOf="@id/container_current"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnBuy" />

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/asap_bold"
        android:gravity="left"
        android:text="Welcome back, Yahya!"
        android:textColor="@color/gm_primary"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_home" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/asap"
        android:gravity="left"
        android:text="Your total balance"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWelcome" />

    <TextView
        android:id="@+id/textTotalBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/asap_bold"
        android:text="Rp 13.000.000"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_profile_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textWelcome"
        app:layout_constraintTop_toBottomOf="@+id/title_home" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/asap_bold"
        android:text="@string/current_pocket"
        android:textColor="@color/gm_primary_dark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/container_pocket_info"
        app:layout_constraintStart_toStartOf="@+id/container_pocket_info"
        app:layout_constraintTop_toTopOf="@+id/container_pocket_info" />

    <TextView
        android:id="@+id/textPocketTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/asap_bold"
        android:text="Grasberg Pocket"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/container_pocket_info"
        app:layout_constraintStart_toStartOf="@id/container_current"
        app:layout_constraintTop_toBottomOf="@+id/textPocketType" />

    <TextView
        android:id="@+id/textPocketAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/asap_bold"
        android:gravity="end"
        android:text="Rp 5.000.000"
        android:textColor="@color/gm_dark_grey"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/container_pocket_info"
        app:layout_constraintStart_toStartOf="@+id/container_pocket_info"
        app:layout_constraintTop_toBottomOf="@+id/textPocketTitle" />

    <TextView
        android:id="@+id/textPocketQty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/asap"
        android:gravity="end"
        android:text="7 gram"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/container_pocket_info"
        app:layout_constraintStart_toStartOf="@+id/container_pocket_info"
        app:layout_constraintTop_toBottomOf="@+id/textPocketAmount" />

    <TextView
        android:id="@+id/textPocketType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/asap"
        android:text="Pocket Type: Gold"
        app:layout_constraintEnd_toEndOf="@+id/container_pocket_info"
        app:layout_constraintStart_toStartOf="@+id/container_pocket_info"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/btnCreatePocket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Pocket"
        app:layout_constraintEnd_toStartOf="@+id/btnSwitchPocket"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_pocket_info" />

    <Button
        android:id="@+id/btnSwitchPocket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch Pocket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnCreatePocket"
        app:layout_constraintTop_toBottomOf="@+id/container_pocket_info" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/asap_bold"
        android:text="Latest Price"
        android:textColor="@color/gm_primary_dark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/container_current"
        app:layout_constraintTop_toTopOf="@+id/container_current" />

    <TextView
        android:id="@+id/textPirceBuy"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/asap_bold"
        android:gravity="center"
        android:text="Rp 872.000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnBuy"
        app:layout_constraintStart_toStartOf="@+id/container_current"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.509" />

    <TextView
        android:id="@+id/textPriceBuy"
        android:layout_width="171dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/asap_bold"
        android:gravity="center"
        android:text="Rp 890.000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSell"
        app:layout_constraintEnd_toEndOf="@+id/container_current"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.49" />

</androidx.constraintlayout.widget.ConstraintLayout>