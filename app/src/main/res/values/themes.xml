<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoldMarket" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gm_primary</item>
        <item name="colorPrimaryVariant">@color/gm_primary_dark</item>
        <item name="colorOnPrimary">@color/gm_white</item>
        <item name="android:textColorPrimary">@color/gm_dark_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gm_secondary</item>
        <item name="colorSecondaryVariant">@color/gm_secondary</item>
        <item name="colorOnSecondary">@color/gm_dark_grey</item>
        <item name="android:textColorSecondary">@color/gm_dark_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>